#:kivy 2.0

<MainWindowWidget>
    BoxLayout:
        size_hint: 1, None
        height: 100
        pos: 300, 250
        Button:
            id: switch
            text: 'Stop'
            size_hint: None, None
            size: 100, 100


            on_release: root.switch()
        Button:
            text: 'Clear'
            size_hint: None, None
            size: 100, 100
    
            on_release: root.clear()

<Scatterer>:
    size_hint: None, None
    Widget:
        id: cont
        size_hint: 1,1
        pos_hint: {"center_x":.5, "center_y":.5}

